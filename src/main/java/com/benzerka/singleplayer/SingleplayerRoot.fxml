<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<fx:root gridLinesVisible="true" type="GridPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" percentHeight="5.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
    </rowConstraints>
    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0" GridPane.hgrow="SOMETIMES" GridPane.vgrow="SOMETIMES">
            <children>
                <Label fx:id="player" text="Player">
                    <graphic>
                        <Label text="Turn:" />
                    </graphic>
                </Label>
                <Label fx:id="errorLabel" minWidth="150.0" textFill="#ff0909" />
            <Button mnemonicParsing="false" onAction="#playAgain" text="Start Over" />
            <Button mnemonicParsing="false" onAction="#returnToMainScreen" text="Go Back" />
            </children>
        </HBox>
        <GridPane fx:id="gameBoard" alignment="CENTER" gridLinesVisible="true" prefHeight="400.0" prefWidth="600.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
            <rowConstraints>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="0.0" prefHeight="110.0" valignment="CENTER" />
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="0.0" prefHeight="110.0" valignment="CENTER" />
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="0.0" prefHeight="110.0" valignment="CENTER" />
            </rowConstraints>
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="110.0" />
                <ColumnConstraints halignment="CENTER" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="110.0" />
                <ColumnConstraints halignment="CENTER" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="110.0" />
            </columnConstraints>
        </GridPane>
    </children>
</fx:root>
