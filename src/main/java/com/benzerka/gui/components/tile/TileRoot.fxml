<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>

<GridPane alignment="CENTER" onMouseClicked="#onClick" xmlns="http://javafx.com/javafx/8.0.121"
          xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Pane fx:id="crossPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="0.0" minWidth="0.0"
              prefHeight="100.0" prefWidth="100.0" visible="false">
            <children>
                <Line fx:id="line1" endX="100.0" startY="100.0" stroke="#ff1100" strokeWidth="3.0"/>
                <Line fx:id="line2" endX="100.0" endY="100.0" stroke="#ff1100" strokeWidth="3.0"/>
            </children>
        </Pane>
        <Pane fx:id="circlePane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="0.0" minWidth="0.0"
              prefHeight="100.0" prefWidth="100.0" visible="false">
            <children>
                <Circle fx:id="circle" centerX="50.0" centerY="50.0" fill="TRANSPARENT" radius="50.0" stroke="#0026ff"
                        strokeType="INSIDE" strokeWidth="3.0"/>
            </children>
        </Pane>
        <Pane fx:id="emptyPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="0.0" minWidth="0.0"
              prefHeight="100.0" prefWidth="100.0"/>
    </children>
</GridPane>
